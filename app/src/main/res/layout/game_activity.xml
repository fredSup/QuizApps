<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingDefaultResource">

    <TextView
            android:id="@+id/textViewQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="La question :"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="232dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp"/>
    <Button
            android:text="réponse A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonReponse1"
            android:layout_marginTop="416dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="réponse B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonReponse2"
            app:layout_constraintTop_toBottomOf="@+id/buttonReponse1"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"/>
    <Button
            android:text="réponse C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonReponse3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="416dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="réponse D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonReponse4"
            app:layout_constraintTop_toBottomOf="@+id/buttonReponse3"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Temps:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"/>
    <TextView
            android:text="Limcoins:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:layout_marginStart="31dp" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginEnd="19dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.704"/>
    <TextView
            android:text="Temps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/temps"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/textView2"/>
    <TextView
            android:text="coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/limcoins"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/textView3"/>
    <TextView
            android:text="Progression:"
            android:layout_width="85dp"
            android:layout_height="36dp" android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="114dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="50dp"/>
    <TextView
            android:text="progrès"
            android:layout_width="79dp"
            android:layout_height="36dp" android:id="@+id/proges"
            android:layout_marginStart="12dp" app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>